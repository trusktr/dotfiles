{
    "title": "WIP, do not use! Swap Command and Option for word/line editing.",
    "rules": [
        {
            "description": "Command + action maps to Option + action",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": { "optional": [ "any" ] }
                    },
                    "to": [ { "key_code": "left_control" } ],
                    "to_if_alone": [ { "key_code": "caps_lock" } ]
                }
            ]
        }
    ]
}
